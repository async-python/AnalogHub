{
  "settings": {
    "analysis": {
      "analyzer": {
        "my_analyzer": {
          "tokenizer": "my_tokenizer",
          "filter": [
            "lowercase"
          ]
        }
      },
      "tokenizer": {
        "my_tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 3,
          "token_chars": ["digit","custom"],
          "custom_token_chars": "ABCDEFGHIGKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
        }
      }
    }
  },
  "mappings": {
    "dynamic": "strict",
    "properties": {
      "id": {
        "type": "keyword"
      },
      "article": {
        "type": "keyword"
      },
      "name_string": {
        "type": "text"
      },
      "name_clean": {
        "type": "text",
        "analyzer": "my_analyzer"
      },
      "name": {
        "type": "text",
        "analyzer": "my_analyzer"
      },
      "search_field": {
        "type": "text",
        "analyzer": "my_analyzer"
      },
      "maker": {
        "type": "keyword"
      },
      "description": {
        "type": "text"
      },
      "position_state": {
        "type": "text"
      },
      "product_line": {
        "type": "text"
      }
    }
  }
}